<div class="row">
  <div class="snippet-display form-group-lg col-md-8 col-md-offset-2">
      <h1 class = "snippet-<%= @snippet.kind %>"><%= @snippet.title %>
        <%= html_kind(@snippet.kind)[:icon]%>
       </h1>

      <div id="snippet-code">
        <% if @snippet.kind == "Markdown"  %>
        <%= markdown(@snippet.code)%>
        <% else %>
        <%= markdown("~~~#{@snippet.kind.downcase}\n#{@snippet.code}\n~~~")   %>
        <% end %>
      </div>
      <% if can? :manage, @snippet %>
      <p><%= link_to "EDIT", edit_snippet_path(@snippet), class: "text-muted" %> <%= link_to "DELETE", snippet_path(@snippet), method: :delete, data: { confirm: "Are you sure??"}, class: "text-muted" %></p>
      <% end %>
  </div>
</div>
